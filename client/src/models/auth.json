{
    "AUTH": {
        "id": "auth",
        "elements": {
            "headings": {
                "two": ["Login"]
            }
        },
        "components": {
            "id": "pa-auth-content",
            "div-login": [{
                "label": "Email Address",
                "input": {
                    "id": "login-email",
                    "type": "email",
                    "placeholder": "Email Address",
                    "ng-model": "auth.email",
                    "required": true
                }
            }, {
                "label": "Password",
                "input": {
                    "id": "login-password",
                    "type": "password",
                    "placeholder": "Password",
                    "ng-model": "auth.password",
                    "required": true
                }
            }],
            "div-controls": {
                "input": {
                    "id": "login-checkbox",
                    "type": "checkbox"
                },
                "span": ["Remember Me", "."],
                "anchor": {
                    "value": "Forgot Password?"
                },
                "button": [{
                    "type": "submit",
                    "class": "pure-button button-success",
                    "value": "Login",
                    "ng-click": "auth.login()"
                }, {
                    "type": "reset",
                    "class": "pure-button",
                    "value": "Reset"
                }]
            }
        }
    }
}